<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_white</item>
        <item name="colorPrimaryDark">@color/light_dark</item>
        <item name="colorAccent">@color/green_money_twice</item>
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <!-- This style is where you define the tint color of your overflow menu button -->
    <style name="actionOverflowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/green_money_twice</item>
    </style>

</resources>
